<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SUCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="fontFamily">@font/jura</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#C48951</item>
        <item name="colorPrimaryVariant">#653406</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#C48951</item>
        <item name="colorSecondaryVariant">#653406</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#653406</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SUCalculator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeNavHeader" parent="@style/ThemeOverlay.AppCompat.Dark">

        <item name="android:colorPrimary">?attr/colorPrimary</item>
        <item name="android:colorPrimaryDark">?attr/colorPrimaryDark</item>
        <item name="android:colorAccent">?attr/colorAccent</item>
        <item name="android:colorControlNormal">?attr/colorControlNormal</item>
        <item name="android:colorControlActivated">?attr/colorControlActivated</item>
        <item name="android:colorControlHighlight">?attr/colorControlHighlight</item>
        <item name="android:colorButtonNormal">?attr/colorButtonNormal</item>

        <item name="android:windowBackground">@color/buttonBackground1</item>
        <item name="android:colorForeground">@color/buttonBackground1</item>
        <item name="android:colorForegroundInverse">@color/buttonBackground1</item>
        <item name="android:colorBackground">@color/buttonBackground1</item>
        <item name="android:colorBackgroundCacheHint">@color/buttonBackground1</item>
        <item name="colorBackgroundFloating">@color/buttonBackground1</item>

        <item name="android:textColorPrimary">@color/buttonBackground1</item>
        <item name="android:textColorPrimaryInverse">@color/buttonBackground1</item>
        <item name="android:textColorPrimaryDisableOnly">@color/buttonBackground1</item>
        <item name="android:textColorSecondary">@color/buttonBackground1</item>
        <item name="android:textColorSecondaryInverse">@color/buttonBackground1</item>
        <item name="android:textColorTertiary">@color/buttonBackground1</item>
        <item name="android:textColorTertiaryInverse">@color/buttonBackground1</item>
        <item name="android:textColorHint">@color/buttonBackground1</item>
        <item name="android:textColorHintInverse">@color/buttonBackground1</item>
        <item name="android:textColorHighlight">@color/buttonBackground1</item>

        <item name="colorControlNormal">?android:attr/textColorSecondary</item>
        <item name="colorControlHighlight">@color/ripple_material_dark</item>
        <item name="colorButtonNormal">@color/button_material_dark</item>
        <item name="colorSwitchThumbNormal">@color/switch_thumb_material_dark</item>


        <item name="isLightTheme">false</item>
    </style>

    <style name="Theme.SUCalculator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SUCalculator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>